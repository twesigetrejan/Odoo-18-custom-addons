<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="my_hostel.HostelDashboardMainTemplate">
        <div class="hostel_dashboard_main">
            <h1>üè† Hostel Overview Dashboard</h1>
            <t t-if="state.error">
                <div class="alert alert-danger" role="alert">
                    <t t-esc="state.error"/>
                </div>
            </t>
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <h3>Total Hostels</h3>
                        <p><t t-esc="state.total_hostels"/></p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <h3>Total Rooms</h3>
                        <p><t t-esc="state.total_rooms"/></p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <h3>Total Students</h3>
                        <p><t t-esc="state.total_students"/></p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <h3>Total Rent (USD)</h3>
                        <p><t t-esc="state.total_rent.toFixed(2)"/></p>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div style="max-width: 800px; max-height: 600px;">
                    <canvas t-ref="chart" width="300" height="150"></canvas>
                </div>
            </div>
        </div>
        
    </t>
</templates>
