<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="my_hostel.LoanPortfolio2DashboardTemplate">
        <div class="loan_portfolio2_dashboard">
            <!-- Header -->
            <div class="container-fluid" style="padding: 20px;">
                <div class="row">
                    <div class="col-12">
                        <h1 class="mb-4">Loan Portfolio Snapshot</h1>
                    </div>
                </div>
                
                <!-- Filters Section -->
                <div class="mb-4 row">
                    <div class="col-12">
                        <div class="card" style="background-color: #f8f9fa; border-radius: 10px;">
                            <div class="card-body">
                                <div class="row align-items-end">
                                    <div class="col-md-3">
                                        <label class="form-label">Date</label>
                                        <div class="input-group">
                                            <input type="date" class="form-control" t-model="state.dateFrom" t-on-change="onDateFromChange"/>
                                            <span class="input-group-text">-</span>
                                            <input type="date" class="form-control" t-model="state.dateTo" t-on-change="onDateToChange"/>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Branch</label>
                                        <select class="form-select" t-model="state.selectedBranch" t-on-change="onBranchChange">
                                            <option value="">All</option>
                                            <t t-foreach="state.branches" t-as="branch" t-key="branch.id">
                                                <option t-att-value="branch.id"><t t-esc="branch.name"/></option>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Compare</label>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" t-model="state.compareEnabled" t-on-change="onCompareChange"/>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Currency</label>
                                        <select class="form-select" t-model="state.selectedCurrency" t-on-change="onCurrencyChange">
                                            <t t-foreach="state.currencies" t-as="currency" t-key="currency.id">
                                                <option t-att-value="currency.id"><t t-esc="currency.name"/></option>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <button class="btn btn-primary w-100" t-on-click="applyFilters">Apply</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Error Display -->
                <t t-if="state.error">
                    <div class="alert alert-danger" role="alert">
                        <t t-esc="state.error"/>
                    </div>
                </t>

                <!-- Main Data Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Product</th>
                                                <th class="text-end">Opening Portfolio</th>
                                                <th class="text-end">Disbursements</th>
                                                <th class="text-end">Principal Repaid</th>
                                                <th class="text-end">Interest Earned</th>
                                                <th class="text-end">Closing Portfolio</th>
                                                <th class="text-end">% Change</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.portfolioData" t-as="item" t-key="item.product">
                                                <tr>
                                                    <td><strong><t t-esc="item.product"/></strong></td>
                                                    <td class="text-end">
                                                        <t t-esc="formatCurrency(item.opening_portfolio)"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <t t-esc="formatCurrency(item.disbursements)"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <t t-esc="formatCurrency(item.principal_repaid)"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <t t-esc="formatCurrency(item.interest_earned)"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <t t-esc="formatCurrency(item.closing_portfolio)"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <span t-att-class="'badge ' + (item.change_percentage >= 0 ? 'bg-success' : 'bg-danger')">
                                                            <t t-esc="item.change_percentage.toFixed(1)"/>%
                                                        </span>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="state.portfolioData.length === 0">
                                                <tr>
                                                    <td colspan="7" class="text-center text-muted">
                                                        No data available for the selected filters.
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                        <tfoot class="table-dark">
                                            <tr>
                                                <td><strong>Totals</strong></td>
                                                <td class="text-end">
                                                    <strong><t t-esc="formatCurrency(state.totals.total_opening)"/></strong>
                                                </td>
                                                <td class="text-end">
                                                    <strong><t t-esc="formatCurrency(state.totals.total_disbursements)"/></strong>
                                                </td>
                                                <td class="text-end">
                                                    <strong><t t-esc="formatCurrency(state.totals.total_principal_repaid)"/></strong>
                                                </td>
                                                <td class="text-end">
                                                    <strong><t t-esc="formatCurrency(state.totals.total_interest_earned)"/></strong>
                                                </td>
                                                <td class="text-end">
                                                    <strong><t t-esc="formatCurrency(state.totals.total_closing)"/></strong>
                                                </td>
                                                <td class="text-end">
                                                    <strong>
                                                        <span t-att-class="'badge ' + (state.totals.total_change_percentage >= 0 ? 'bg-success' : 'bg-danger')">
                                                            <t t-esc="state.totals.total_change_percentage.toFixed(1)"/>%
                                                        </span>
                                                    </strong>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions Row -->
                <div class="mt-4 row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-outline-primary" t-on-click="exportData">
                                <i class="fa fa-download me-2"></i>Export Data
                            </button>
                            <button class="btn btn-success" t-on-click="downloadReport">
                                <i class="fa fa-file-pdf me-2"></i>Download PDF Report
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Chart Section -->
                <div class="mt-4 row" t-if="state.portfolioData.length > 0">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Portfolio Performance Chart</h5>
                            </div>
                            <div class="card-body">
                                <div style="height: 400px;">
                                    <canvas t-ref="portfolioChart" style="max-height: 400px;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>