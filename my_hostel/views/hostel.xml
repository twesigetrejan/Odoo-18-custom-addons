<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- kanban View -->
<record id="view_hostel_kanban_view" model="ir.ui.view">
    <field name="name">hostel.hostel.kanban.view</field>
    <field name="model">hostel.hostel</field>
    <field name="arch" type="xml">
        <kanban class="hostel_kanban">
            <field name="image"/>
            <field name="name"/>
            <field name="hostel_code"/>
            <field name="city"/>
            <field name="state_id"/>
            <field name="hostel_capacity"/>
            <field name="hostel_floors"/>
            <field name="hostel_rating"/>
            <field name="active"/>

            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click o_kanban_record">
                        <div class="o_kanban_image">
                            <!-- Main image with fallback -->
                            <img t-if="record.image.raw_value"
                                t-att-src="'data:image/jpeg;base64,' + record.image.raw_value"
                                class="img img-fluid oe_kanban_image"
                                alt="Hostel Image"
                                style="max-height: 120px; object-fit: cover;"/>
                            
                            <!-- Default image fallback -->
                            <img t-else=""
                                t-att-src="'%s/static/src/img/hostel-default.jpg' % module_path"
                                class="img img-fluid oe_kanban_image"
                                alt="Default Hostel Image"
                                style="max-height: 120px; object-fit: cover;"/>
                        </div>
                        <div class="oe_kanban_details">
                            <strong><field name="name"/></strong>
                            <div class="text-muted">
                                <p>Code: <field name="hostel_code"/></p>
                                <p>
                                    Location: 
                                    <field name="city"/>
                                    <t t-if="record.state_id and record.state_id.data">
                                        , <field name="state_id"/>
                                    </t>
                                </p>
                                <p>Capacity: <field name="hostel_capacity"/> students</p>
                                <p>Floors: <field name="hostel_floors"/></p>
                                <div class="d-flex align-items-center">
                                    Rating: 
                                    <field name="hostel_rating" widget="float_rate" options="{'precision': 0.5}"/>
                                </div>
                                <p>
                                    <span t-if="record.active and record.active.value" class="text-success">● Active</span>
                                    <span t-else="" class="text-danger">● Inactive</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

    <!-- Form View -->
    <record id="view_hostel_form_view" model="ir.ui.view">
        <field name="name">hostel.hostel.form.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
          <form string="Hostel">
  <sheet>
    <div class="oe_title">
      <h3>
        <table>
          <tr>
            <td style="padding-right:10px;">
              <field name="name" required="1" placeholder="Name"/>
            </td>
            <td style="padding-right:10px;">
              <field name="hostel_code" placeholder="Code"/>
            </td>
          </tr>
        </table>
      </h3>
    </div>

    <group>
      <group>
        <label for="street" string="Address"/>
        <div class="o_address_format">
          <field name="street" placeholder="Street..." class="o_address_street"/>
          <field name="street2" placeholder="Street 2..." class="o_address_street"/>
          <field name="city" placeholder="City" class="o_address_city"/>
          <field name="state_id" class="o_address_state" placeholder="State" 
                 options='{"no_open": True}'/>
          <field name="zip" placeholder="ZIP" class="o_address_zip"/>
          <field name="country_id" placeholder="Country" class="o_address_country" 
                 options='{"no_open": True, "no_create": True}'/>

          <field name="image" widget="image" class="oe_avatar" 
       options='{"preview_image": "image_1024", "size": [1024, 768]}'/>


        </div>
      </group>

      <group>
        <field name="phone" widget="phone"/>
        <field name="mobile" widget="phone"/>
        <field name="email" widget="email" context="{'gravatar_image': True}"/>
      </group>
    </group>
     <group> 
        <field name="hostel_floors"/> 
        <field name="hostel_capacity"/>
        <field name="active"/> 
        <field name="type"/> 
        <field name= "amenity_id" />
        <field name="hostel_rating"/> 
        <field name="other_info"/> 
     </group> 
    <group> 
     <field name="description"/> 
    </group>
    
  </sheet>
</form>

        </field>
    </record>

    <!-- Search View -->
    <record id="view_hostel_search_view" model="ir.ui.view">
        <field name="name">hostel.hostel.search.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="hostel_code"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hostel" model="ir.actions.act_window">
        <field name="name">Hostel</field>
        <field name="res_model">hostel.hostel</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first Hostel
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="hostel_main_menu" name="Hostel Management" sequence="1"/>
    <menuitem id="hostel_type_menu"
              name="Hostels"
              parent="hostel_main_menu"
              action="action_hostel"
              sequence="1"
              groups="my_hostel.group_hostel_manager,my_hostel.group_hostel_user"/>

</odoo>
