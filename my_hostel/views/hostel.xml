<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_hostel_kanban_view" model="ir.ui.view">
  <field name="name">hostel.hostel.kanban.view</field>
  <field name="model">hostel.hostel</field>
  <field name="arch" type="xml">
    <kanban>
      <templates>
        <t t-name="kanban-box">
          <div class="oe_kanban_global_click o_kanban_record">
            <div class="o_kanban_image">
              <img t-if="record.image.raw_value" t-att-src="'data:image/png;base64,' + record.image.raw_value" class="img img-fluid" alt="Hostel Image"/>
            </div>
            <div class="oe_kanban_details">
              <strong><field name="name"/></strong>
              <p>Code: <field name="hostel_code"/></p>
              <p>Location: <field name="city"/>, <field name="state_id"/></p>
              <p>Capacity: <field name="hostel_capacity"/></p>
              <p>Floors: <field name="hostel_floors"/></p>
              <p>Rating: <field name="hostel_rating"/></p>
              <p t-if="record.active.value" style="color: green;">Active</p>
              <p t-if="not record.active.value" style="color: red;">Inactive</p>
            </div>
          </div>
        </t>
      </templates>
    </kanban>
  </field>
</record>

    <!-- Form View -->
    <record id="view_hostel_form_view" model="ir.ui.view">
        <field name="name">hostel.hostel.form.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
          <form string="Hostel">
  <sheet>
    <div class="oe_title">
      <h3>
        <table>
          <tr>
            <td style="padding-right:10px;">
              <field name="name" required="1" placeholder="Name"/>
            </td>
            <td style="padding-right:10px;">
              <field name="hostel_code" placeholder="Code"/>
            </td>
          </tr>
        </table>
      </h3>
    </div>

    <group>
      <group>
        <label for="street" string="Address"/>
        <div class="o_address_format">
          <field name="street" placeholder="Street..." class="o_address_street"/>
          <field name="street2" placeholder="Street 2..." class="o_address_street"/>
          <field name="city" placeholder="City" class="o_address_city"/>
          <field name="state_id" class="o_address_state" placeholder="State" 
                 options='{"no_open": True}'/>
          <field name="zip" placeholder="ZIP" class="o_address_zip"/>
          <field name="country_id" placeholder="Country" class="o_address_country" 
                 options='{"no_open": True, "no_create": True}'/>

          <field name="image" string="Hostel Image"/>


        </div>
      </group>

      <group>
        <field name="phone" widget="phone"/>
        <field name="mobile" widget="phone"/>
        <field name="email" widget="email" context="{'gravatar_image': True}"/>
      </group>
    </group>
     <group> 
        <field name="hostel_floors"/> 
        <field name="hostel_capacity"/>
        <field name="active"/> 
        <field name="type"/> 
        <field name= "amenity_id" />
        <field name="hostel_rating"/> 
        <field name="other_info"/> 
     </group> 
    <group> 
     <field name="description"/> 
    </group>
    
  </sheet>
</form>

        </field>
    </record>

    <!-- Search View -->
    <record id="view_hostel_search_view" model="ir.ui.view">
        <field name="name">hostel.hostel.search.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="hostel_code"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hostel" model="ir.actions.act_window">
        <field name="name">Hostel</field>
        <field name="res_model">hostel.hostel</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first Hostel
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="hostel_main_menu" name="Hostel Management" sequence="1"/>
    <menuitem id="hostel_type_menu"
              name="Hostels"
              parent="hostel_main_menu"
              action="action_hostel"
              sequence="1"
              groups="my_hostel.group_hostel_manager,my_hostel.group_hostel_user"/>

</odoo>
