<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_hostel_student_tree_view" model="ir.ui.view">
        <field name="name">hostel.student.tree.view</field>
        <field name="model">hostel.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_code"/>
                <field name="gender"/>
                <field name="hostel_id"/>
                <field name="room_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hostel_student_form_view" model="ir.ui.view">
        <field name="name">hostel.student.form.view</field>
        <field name="model">hostel.student</field>
        <field name="arch" type="xml">
            <form string="Hostel Student">
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <table>
                                <tr>
                                    <td style="padding-right:10px;">
                                        <field name="name" required="1" placeholder="Name"/>
                                    </td>
                                    <td style="padding-right:10px;">
                                        <field name="student_code" placeholder="Student reg no"/>
                                    </td>
                                </tr>
                            </table>
                        </h3>
                    </div>

                    <group>
                    
                            <label for="name" string="Student name"/>
                            <field name="name" placeholder="Student Name" required="1"/>
                            <field name="student_code" placeholder="Student Code" required="1"/>
                            <field name="gender" placeholder="Students Gender"/>
                            <field name="room_id" placeholder="Room" options='{"no_create": True}'/>
                            <field name="hostel_id" placeholder="Hostel" options='{"no_create": True}'/>
                            <field name="admission_date" placeholder="Day of student admission"/>
                    
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hostel_student_search_view" model="ir.ui.view">
        <field name="name">hostel.student.search.view</field>
        <field name="model">hostel.student</field>
        <field name="arch" type="xml">
            <search string="Search Hostel Students">
                <field name="name" string="Student Name"/>
                <field name="student_code" string="Student Code"/>
                <field name="gender"/>
                <field name="hostel_id"/>
                <field name="room_id"/>
                <field name="admission_date"/>

                <!-- <filter string="Male" domain="[('gender','=','male')]"/>
                <filter string="Female" domain="[('gender','=','female')]"/> -->
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hostel_student" model="ir.actions.act_window">
        <field name="name">Hostel Students</field>
        <field name="res_model">hostel.student</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hostel_student_tree_view"/>
        <field name="search_view_id" ref="view_hostel_student_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create your first hostel student
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="hostel_student_menu" name="Hostel Students" parent="hostel_main_menu" sequence="3"
              action="action_hostel_student" groups="my_hostel.group_hostel_manager"/>
</odoo>
